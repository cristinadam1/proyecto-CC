{
    "openapi": "3.0.0",
    "info": {
      "title": "Actividad API",
      "description": "API para gestionar actividades",
      "version": "1.0.0"
    },
    "paths": {
      "/activities": {
        "get": {
          "summary": "Obtiene todas las actividades",
          "operationId": "getActivities",
          "responses": {
            "200": {
              "description": "Lista de actividades",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Activity"
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Crea una nueva actividad",
          "operationId": "createActivity",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Activity"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Actividad creada"
            }
          }
        }
      },
      "/activities/{activity_id}": {
        "get": {
          "summary": "Obtiene una actividad por ID",
          "operationId": "getActivity",
          "parameters": [
            {
              "name": "activity_id",
              "in": "path",
              "required": true,
              "description": "ID de la actividad",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Actividad encontrada",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Activity"
                  }
                }
              }
            },
            "404": {
              "description": "Actividad no encontrada"
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Activity": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "nombre": {
              "type": "string"
            },
            "descripcion": {
              "type": "string"
            },
            "fecha_hora": {
              "type": "string",
              "format": "date-time"
            },
            "duracion": {
              "type": "integer"
            },
            "ubicacion": {
              "type": "string"
            }
          }
        }
      }
    }
  }
  